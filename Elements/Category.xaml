<UserControl x:Class="Furniture_Store.Elements.Category"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Furniture_Store.Elements"
             mc:Ignorable="d">
    <Grid>
        <Grid Margin="15,15,15,15" Background="#7FFFFFFF" Height="300" Width="170">
            <Image x:Name="image" Margin="10,10,10,120" Stretch="UniformToFill" Source="background.jpg"></Image>
            <Label x:Name="name" Content="Наименование" Margin="10,208,10,66" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontWeight="Bold" Foreground="Black"></Label>
            <Button x:Name="category" VerticalAlignment="Bottom" Content="В КАТЕГОРИЮ" Margin="10,0,10,10" Height="25" Click="category_Click"></Button>
        </Grid>
    </Grid>
</UserControl>
